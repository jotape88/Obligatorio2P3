@model WebObligatorio_2_P3.Models.ViewModelIngresoActividad

<h2>Listar todos los pases libres y cuponeras vigentes a un mes y año dados</h2>

@using (Html.BeginForm("ListarIngresosActXSocio", "Actividad", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.CedulaSocio, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.CedulaSocio, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese una cédula de entre 7 y 9 dígitos" } })
            @Html.ValidationMessageFor(model => model.CedulaSocio, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NombreActiv, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.NombreActiv, new { htmlAttributes = new { @class = "form-control", placeholder = "Ingrese el nombre de la actividad" } })
            @Html.ValidationMessageFor(model => model.NombreActiv, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Buscar" class="btn btn-info" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Volver al inicio", "Index", "Home")
</div>
